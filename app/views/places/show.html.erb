<h1 class="main-h1">Come visit beautiful <%= @place.location %>!</h1>

<div class="place-display">
  <div>
    <strong>Location</strong><br>
    <%= @place.location %>
  </div>

  <div>
    <strong>Price</strong><br>
    <%= @place.price %>
  </div>

  <div>
    <strong>Dates Available</strong><br>
    <%= @place.dates_available %>
  </div>
</div>

<a href="/places/<%= @place.id %>/reviews/new">
<button id="add-button" href="/places" type="button" name="add-button" class="add-button">Add a Review</button>
</a>

