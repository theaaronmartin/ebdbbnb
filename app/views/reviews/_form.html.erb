<%= form_for [@places, @review] do |f| %>
<fieldset class="add-form">
    <% if @review.errors.any? %>
      <div>
        <h2>
          Please fix the following errors:
        </h2>
        <ul>
          <% @review.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-div">
      <%= f.label :reviewer_name %><br>
      <%= f.text_field :reviewer_name, placeholder: "Turbo Kid", :maxlength => 30, :rows => 1, :cols => 30 %>
    </div>

    <div class="form-div">
      <%= f.label :description %><br>
      <%= f.text_field :description, placeholder: "Your review here", :maxlength => 180, :rows => 4, :cols => 12 %>
    </div>

    <div class="form-div">
      <%= f.label :rating%><br>
      <%= f.number_field :rating, placeholder: "1-5", :min => 1, :max => 5, :maxlength => 3, :rows => 1, :cols => 4 %>
    </div>

    <div class="form-div">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
